<div class="container">
  <div class="col-3 border-end">
    <div class="mb-5">
      <div class="row">
       <div class="mt-3 col-3">
            <% if @user.profile_image.attached? %>
             <%= image_tag @user.profile_image, class: 'user_icon' %>
            <% else %>
             <%= image_tag 'no_image', size: "50x50", class: 'user_icon' %>
            <% end %>
       </div>
       <div class="col-9 mt-5"><%= @user.nickname %></div>
      </div>
      <div class="row mt-3">
        <div class="col-6">フォロー数</div>
        <div class="col-6">フォロワー数</div>
      </div>
      <div class="row">
        <div class="col-6">0</div>
        <div class="col-6">0</div>
      </div>


      <div>
        <%= link_to edit_user_path(@user.id), class: "btn btn_form w-75 mt-3" do %>
         <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </div>
    </div>

    <h5>新規投稿</h5>
    <div class="mt-3 pb-3">
      <%= form_with model: @photo, url:photos_path, method: :post do |f| %>
       <div>
         <p class="mb-1">画像</p>
         <%= f.file_field :image %>
       </div>
       <div>
         <p class="mb-1">コメント</p>
         <%= f.text_area :body %>
       </div>
       <div>
         <p class="mb-1">撮影場所</p>
         <%= f.text_field :address %>
       </div>
       <div>
         <p class="mb-1">タグ(カンマ「,」で区切ってください)</p>
         <%= f.text_field :name %>
       </div>
       <div class="mt-3">
         <%= f.submit '投稿', class: "btn btn_form" %>
       </div>
      <% end %>
    </div>
  </div>
  <div class="col-8"></div>
</div>