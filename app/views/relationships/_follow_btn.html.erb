<% unless user == current_user %>
  <% if current_user.following?(user) %>
    <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete, remote: true, class: "btn btn_form mt-3" %>
  <% else %>
    <%= link_to 'フォローする', user_relationships_path(user.id), method: :post, remote: true, class: "btn btn_form mt-3" %>
  <% end %>
<% end %>