<% if photo.favorited_by?(current_user) %>
  <%= link_to photo_favorites_path(photo), method: :delete, class: "ms-5", remote: true, class: "text-danger" do %>
    ♥<%= photo.favorites.count %>
  <% end %>
<% else %>
  <%= link_to photo_favorites_path(photo), method: :post, class: "ms-5", remote: true, class: "text-dark" do %>
    ♡<%= photo.favorites.count %>
  <% end %>
<% end %>