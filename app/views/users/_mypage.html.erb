<div class="row">
  <div class="mt-3 col-3">
    <% if user.profile_image.attached? %>
      <%= image_tag user.profile_image, class: 'user_icon' %>
    <% else %>
      <%= image_pack_tag 'no_image', size: "50x50", class: 'user_icon' %>
    <% end %>
  </div>
  <div class="col-3 mt-5"><%= link_to user.nickname, user_path(user.id), class: "text-dark" %></div>
  <div id="follow_btn" class="col-6 mt-3">
    <%= render 'relationships/follow_btn', user: user %>
  </div>
</div>

<div class="row mt-3">
  <div class="col-6">フォロー数</div>
  <div class="col-6">フォロワー数</div>
</div>
<div class="row">
  <div class="col-6"><%= link_to user.followings.count, user_followings_path(user) %></div>
  <div id="followers_count" class="col-6"><%= link_to user.followers.count, user_followers_path(user) %></div>
</div>

<div>
 <% if user == current_user || current_user.is_admin? %>
  <%= link_to edit_user_path(user.id), class: "btn btn_form w-75 mt-3" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
 <% end %>
</div>
