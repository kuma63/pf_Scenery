<div class="row">
  <div class="mt-3 col-3">
    <% if user.profile_image.attached? %>
      <%= image_tag user.profile_image, class: 'user_icon' %>
    <% else %>
      <%= image_tag 'no_image', size: "50x50", class: 'user_icon' %>
    <% end %>
  </div>
  <div class="col-9 mt-5"><%= user.nickname %></div>
</div>
<div class="row mt-3">
  <div class="col-6">フォロー数</div>
  <div class="col-6">フォロワー数</div>
</div>
<div class="row">
  <div class="col-6">0</div>
  <div class="col-6">0</div>
</div>

<div>
  <%= link_to edit_user_path(user.id), class: "btn btn_form w-75 mt-3" do %>
    <i class="fa-solid fa-user-gear"></i>
  <% end %>
</div>