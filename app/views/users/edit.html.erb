<div class="container">
  <h2>会員情報編集</h2>

  <div>
    <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>

      <div class="row">
        <p>プロフィール画像</p>
        <%= f.file_field :profile_image %>
      </div>

      <div class="field row">
        <p class="col-4">名前</p>
        <%= f.text_field :name, class: "col-8" %>
      </div>

      <div class="field row">
        <p class="col-4">ニックネーム</p>
        <%= f.text_field :nickname %>
      </div>


      <div class="field row">
        <p class="col-4">メールアドレス</p>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="actions">
        <%= f.submit "変更を保存" %>
      </div>
    <% end %>

  </div>
</div>
